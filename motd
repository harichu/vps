#!/bin/bash
OUTPUT=/etc/motd.1
rm -f $OUTPUT

echo -e "
####################################################################

Hello, $USER
Today's date is `date`, this is week `date +"%V"`.

####################################################################

Hostname : `hostname`
Kernel Version : `uname -r`
Uptime : `uptime | sed 's/.*up \([^,]*\), .*/\1/'`
Last Reboot Time : `who -b | awk '{print $3,$4}'`

*********************************************************************
This is the uptime information:
`uptime`
*********************************************************************
Free memory:
`free`
*********************************************************************
Disk usage:
`df -kh`
*********************************************************************

*********************************************************************
Webserver:
`curl -s http://127.0.0.1 -I | grep 'Server:'`

PHP: `php -v`

SQL: `mysql --version`
*********************************************************************
"
